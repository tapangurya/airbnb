<!DOCTYPE html>
<html lang="en">
  <%- include("../partials/head") %>

  <body class="bg-gray-100 min-h-screen flex flex-col">
    <!-- Navbar -->
    <%- include("../partials/nav") %>

    <!-- Center Wrapper -->
    <div class="flex flex-1 items-center justify-center">
      <main class="w-full max-w-md bg-white rounded-xl shadow-lg p-6">
        <header class="mb-6 text-center">
          <h1 class="text-2xl font-bold text-gray-800">Edit Your Home</h1>
          <p class="text-sm text-gray-500">
            Add your property details properly
          </p>
        </header>
        <form action="/admin/edit-home" method="post" class="space-y-4">
          <!-- House Name -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">
              Current House Name
            </label>
            <input type="hidden" name="id" value="<%= home.id %>" />
            <input
              type="text"
              name="houseName"
              value="<%= home.houseName %>"
              required
              class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-500"
            />
          </div>

          <!-- Image URL -->
          <div>
            <img src="<%= home.imageUrl %>" alt="" class="w-75 h-48" />
            <label class="block text-sm font-medium text-gray-700 mb-1">
              Image URL
            </label>
            <input
              type="url"
              name="imageUrl"
              value="<%= home.imageUrl %>"
              required
              class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-500"
            />
          </div>

          <!-- Price -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">
              Price (per night)
            </label>
            <input
              type="number"
              name="price"
              value="<%= home.price %>"
              min="0"
              required
              class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-500"
            />
          </div>
          <!-- rating -->
          <!-- Price -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">
              Rating
            </label>
            <input
              type="number"
              name="rating"
              value="<%= home.rating %>"
              min="0"
              required
              class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-500"
            />
          </div>

          <!-- Location -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">
              Location
            </label>
            <input
              type="text"
              name="location"
              value="<%= home.location %>"
              required
              class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-500"
            />
          </div>

          <!-- Submit -->
          <button
            type="submit"
            class="w-full bg-amber-500 text-white font-semibold py-2 rounded-lg hover:bg-amber-600 transition duration-200"
          >
            Edit Home
          </button>
        </form>
      </main>
    </div>
  </body>
</html>
